      </div>
    </div>
    <div class="col-12 col-md-7 d-flex flex-column">
      <img width="80%" height="auto" src="https://res.cloudinary.com/bdavidxyz-com/image/upload/v1637305459/bootstrap/Pages2.png" loading="lazy">
    </div>
  </div>
</section>

<%# Latest trainings %>
<section class="my-5">
  <div class="row justify-content-between">
    <div class="col-12 my-5 flex-center text-center flex-column">
      <h2 class="display-5 fw-800">Dernières formations</h2>
    </div>

    <% @latest_trainings.each do |training| %>
      <div class="col-12 col-md-6 col-lg-4 d-flex mb-4">
        <div class="training_card card p-4 justify-content-between align-items-start shadow">
          <%= cl_image_tag(training.thumbnail.key, class: "card-img-top", alt: "Thumbnail #{training.title}", height: "175px") if training.thumbnail.attached?%>
            <h5 class="card-title mt-2"><%= training.title %></h5>
            <h6 class="card-subtitle fst-italic fw-light">Par <%= training.user.email.slice(0, training.user.email.index('@')) %></h6>
            <div class="card-body p-0 mt-3">
              <p><%= training.description %></p>
            </div>
            <%= link_to 'Consulter', catalogue_path(training.id), class: "card-link section_link" %>
        </div>
      </div>
    <%end%>

    <div class="col-12 flex-center">
      <%= link_to 'Plus de formations', catalogue_index_path, class: "fw-bold section_link" %>
    </div>
  </div>
</section>

