<h1>Liste de mes formations</h1>

<% @my_trainings.each do |training| %>
  <ul>
    <h2><%= training.title %></h2>
    <p><%= training.description %></p>
  <% training.sections.each do |section| %>
    <ul>
      <h3><%= section.title %></h3>
      <p><%= section.description %></p>
    <% section.lessons.each do |lesson| %>
      <ul>
        <h4><%= link_to lesson.title, training_section_lesson_path(training, section, lesson) %></h4>
      </ul>
    <% end %>
    </ul>
  <%end%>
  </ul>
<%end%>

